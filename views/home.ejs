<!DOCTYPE html>
<html lang="en">
<head>
    
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
</head>
<body>

<!-- Create Task  and delete-->

    <div class="container-md" >
        <form action="/create-task" method="post">
        <div class="row">
            <div class="col-12" id="title">TO-DO List App</div>
            <p id = "Description">Description</p>
            <textarea class="form-control textArea" name="description" id="exampleFormControlTextarea1" rows="3" placeholder="What do you need to do?"></textarea>
        </div>
        
        <div class="row">
            <div class="col-6">
                <div class="form-floating">
                    <select class="form-select" name="category" id="floatingSelectGrid" required>
                      <option selected>Choose the Category</option>
                      <option>Personal</option>
                      <option>Work</option>
                      <option>Gym</option>
                    </select>
                    <label for="floatingSelectGrid">Category</label>
                  </div>
            </div>
            
            <div class="col-6">
                <div class="row" style="margin-top: 5px; margin-left: 3px;">Due-Date</div>
                <div class="row"><input id="date" type="date" name="date" required></div>
            </div>
          </div>
        
        <hr style="color: rgb(159, 159, 159);">
        <div class="row">
            <div class="col-6"><input type="submit"  class="btn btn-success" id="add" value="ADD TASK"></div>
            
        </div>
        </form>
<!-- DISPLAY THE TASK SECTION -->
        <hr style="color: rgb(159, 159, 159);">
        <div class="row">
            <div class="col-12" id="lists">List Of Tasks</div>
        </div>
        <hr style="color: rgb(159, 159, 159);">
        <form action="/delete-task" method="GET">
        <div class="row">
            <div class="col-1">Select</div>
            <div class="col-5" style="text-align: center;">Tasks</div>
            <div class="col-3">Category</div>
            <div class="col-3">Due-Date</div>
        </div>
        <hr style="color: rgb(159, 159, 159);">
        <div class="row" style="height: 250px;">
            <% for(let i of task) { %>
                <div class="col-1"><input type="checkbox" name="<%= i._id %>" ></div>
                <div class="col-5"><p id="task-description"><%= i.description %></div>
                <div class="col-3"><p id="task-category"></p>: <%= i.category %></div>
                <div class="col-3">p id="due-date">: <%= i.date %></p></div>


            <% } %>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="col-6"><input type="submit" class="btn btn-danger delete" value="DELETE TASK"></div>
        </div>
        </form>


    </div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
<script src="/JS/index.js"></script>
</body>
</html>